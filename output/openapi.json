{
  "openapi": "3.0.3",
  "info": {
    "version": "2024.0.1",
    "title": "my coin analyst",
    "description": "Restful API for my coin analysis"
  },
  "servers": [
    {
      "url": "http://www.rimapa0321.com",
      "description": "my coin analyst Service"
    }
  ],
  "tags": [
    {
      "name": "mycoins",
      "description": "coin info"
    },
    {
      "name": "history",
      "description": "history info"
    }
  ],
  "paths": {
    "/api/coin": {
      "get": {
        "summary": "Get Coin Details",
        "tags": [
          "mycoins"
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/detail"
                }
              }
            }
          }
        }
      }
    },
    "/api/history": {
      "post": {
        "summary": "Adds a new history",
        "tags": [
          "history"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/detail"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/message"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "detail": {
        "type": "object",
        "properties": {
          "datas": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/data"
            }
          }
        }
      },
      "data": {
        "type": "object",
        "properties": {
          "symbol": {
            "type": "string"
          },
          "current": {
            "$ref": "#/components/schemas/current"
          }
        }
      },
      "current": {
        "type": "object",
        "properties": {
          "price": {
            "type": "string"
          },
          "amount": {
            "type": "string"
          },
          "balance": {
            "type": "string"
          }
        }
      },
      "message": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        }
      }
    }
  }
}
